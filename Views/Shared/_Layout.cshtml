<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - منصة انجازات الموظفين</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center gap-3 me-auto">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="/images/amana-logo.png" alt="Amana Logo" style="height:40px;width:auto;margin-left:10px;" />
                    منصة انجازات الموظفين
                </a>
            </div>
            <ul class="navbar-nav flex-row align-items-center mx-3">
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">الرئيسية</a></li>
            </ul>
            <div class="d-flex align-items-center ms-auto">
                @if (Context.Session.GetInt32("UserId") != null)
                {
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="https://ui-avatars.com/api/?name=@Context.Session.GetString("UserName")&background=43a047&color=fff&rounded=true&size=32" class="rounded-circle me-2" width="32" height="32" alt="User Photo" />
                            <span>@Context.Session.GetString("UserName")</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li class="dropdown-item text-center">
                                <img src="https://ui-avatars.com/api/?name=@Context.Session.GetString("UserName")&background=43a047&color=fff&rounded=true&size=64" class="rounded-circle mb-2" width="64" height="64" alt="User Photo" />
                                <div class="fw-bold">@Context.Session.GetString("UserName")</div>
                                <div class="text-muted small">***.com</div>
                            </li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Info">إنجازاتي ومعلوماتي</a></li>
                            <li><a class="dropdown-item text-danger" asp-controller="Auth" asp-action="Logout">تسجيل الخروج</a></li>
                        </ul>
                    </div>
                }
                else
                {
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Auth" asp-action="Login">تسجيل الدخول</a>
                    </div>
                }
            </div>
        </div>
    </nav>
    <div class="container pt-4">
        @RenderBody()
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
