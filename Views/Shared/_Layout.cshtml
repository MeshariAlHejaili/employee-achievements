<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Employee Portal</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Employee Portal</a>
            <ul class="navbar-nav ms-auto align-items-center">
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                @if (Context.Session.GetInt32("UserId") != null)
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="https://ui-avatars.com/api/?name=@Context.Session.GetString("UserName")&background=43a047&color=fff&rounded=true&size=32" class="rounded-circle me-2" width="32" height="32" alt="User Photo" />
                            <span>@Context.Session.GetString("UserName")</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li class="dropdown-item text-center">
                                <img src="https://ui-avatars.com/api/?name=@Context.Session.GetString("UserName")&background=43a047&color=fff&rounded=true&size=64" class="rounded-circle mb-2" width="64" height="64" alt="User Photo" />
                                <div class="fw-bold">@Context.Session.GetString("UserName")</div>
                                <div class="text-muted small">***.com</div>
                            </li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Info">إنجازاتي ومعلوماتي</a></li>
                            <li><a class="dropdown-item text-danger" asp-controller="Auth" asp-action="Logout">تسجيل الخروج</a></li>
                        </ul>
                    </li>
                }
                else
                {
                    <li class="nav-item"><a class="nav-link" asp-controller="Auth" asp-action="Login">Login</a></li>
                }
            </ul>
        </div>
    </nav>

    <div class="container pt-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
