<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - منصة انجازات الموظفين</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/layout.css" />
    <link rel="stylesheet" href="~/css/feed.css" />
    <link rel="stylesheet" href="~/css/forms.css" />
    <link rel="stylesheet" href="~/css/auth.css" />
    <link rel="stylesheet" href="~/css/account.css" />
    <link rel="stylesheet" href="~/css/photo-upload.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center gap-3 me-auto">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Feed" asp-action="Index">
                    <img src="/images/amana-logo.png" alt="Amana Logo" style="height:40px;width:auto;margin-left:10px;" />
                    منصة انجازات الموظفين
                </a>
            </div>
            <ul class="navbar-nav flex-row align-items-center mx-3">
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")" asp-controller="Feed" asp-action="Index">
                        <i class="bi bi-house-door me-1"></i>الرئيسية
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "AddAchievement" ? "active" : "")" asp-controller="Achievement" asp-action="AddAchievement">
                        <i class="bi bi-plus-circle me-1"></i>إضافة إنجاز
                    </a>
                </li>
                @if (Context.Session.GetString("IsManager") == "true")
                {
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "ManagerDashboard" ? "active" : "")" asp-controller="Manager" asp-action="ManagerDashboard">
                            <i class="bi bi-clipboard-data me-1"></i>لوحة المدير
                        </a>
                    </li>
                }
            </ul>
            <div class="d-flex align-items-center ms-auto">
                @if (Context.Session.GetInt32("UserId") != null)
                {
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <div class="user-avatar me-2">
                                @(Context.Session.GetString("UserName")?.Substring(0, 1) ?? "?")
                            </div>
                            <span>@Context.Session.GetString("UserName")</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li>
                                <div class="user-profile-section">
                                    <div class="user-profile-avatar">
                                        @(Context.Session.GetString("UserName")?.Substring(0, 1) ?? "?")
                                    </div>
                                    <div class="fw-bold">@Context.Session.GetString("UserName")</div>
                                    <div class="text-muted small">موظف</div>
                                </div>
                            </li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Info">
                                <i class="bi bi-person me-2"></i>إنجازاتي ومعلوماتي
                            </a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item text-danger" asp-controller="Auth" asp-action="Logout">
                                <i class="bi bi-box-arrow-right me-2"></i>تسجيل الخروج
                            </a></li>
                        </ul>
                    </div>
                }
                else
                {
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Auth" asp-action="Login">
                            <i class="bi bi-box-arrow-in-right me-1"></i>تسجيل الدخول
                        </a>
                    </div>
                }
            </div>
        </div>
    </nav>
    <div class="container pt-4">
        @RenderBody()
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
