@model EmployeeAchievementss.Models.Achievement
@{
    ViewData["Title"] = "تعديل الإنجاز";
}

<div class="form-container">
    <div class="form-card">
        <h2 class="form-title">تعديل الإنجاز</h2>
        
        <!-- Achievement Preview -->
        <div class="achievement-preview">
            <div class="preview-title">@Model.Title</div>
            <div class="preview-description">@Model.Description</div>
            <div class="preview-date">
                <i class="bi bi-clock"></i> @Model.Date.ToString("MMMM dd, yyyy")
            </div>
        </div>
        
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="OwnerId" />
            
            <div class="mb-4">
                <label asp-for="Title" class="form-label">عنوان الإنجاز</label>
                <input asp-for="Title" class="form-control" placeholder="اكتب عنوان الإنجاز..." required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            
            <div class="mb-4">
                <label asp-for="Description" class="form-label">وصف الإنجاز</label>
                <textarea asp-for="Description" class="form-control" rows="6" 
                          placeholder="اكتب وصفاً مفصلاً لإنجازك..." required></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="mb-4">
                <label asp-for="Date" class="form-label">تاريخ الإنجاز</label>
                <input asp-for="Date" type="date" class="form-control" required />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            
            <div class="d-flex gap-3">
                <button type="submit" class="btn btn-primary flex-grow-1">
                    <i class="bi bi-check-circle me-2"></i>حفظ التعديلات
                </button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="bi bi-x-circle me-2"></i>إلغاء
                </a>
            </div>
        </form>
        
        <!-- Delete Button -->
        <hr class="my-4" />
        <form asp-action="Delete" method="post" onsubmit="return confirm('هل أنت متأكد من حذف هذا الإنجاز؟');">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger w-100">
                <i class="bi bi-trash me-2"></i>حذف الإنجاز
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/forms.js"></script>
} 