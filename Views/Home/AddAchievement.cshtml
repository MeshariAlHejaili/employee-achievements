@model EmployeeAchievementss.Models.Achievement
@{
    ViewData["Title"] = "إضافة إنجاز";
}

<div class="form-container">
    <div class="form-card">
        <h2 class="form-title">إضافة إنجاز جديد</h2>
        
        <form asp-action="AddAchievement" method="post" enctype="multipart/form-data">
            <div class="mb-4">
                <label asp-for="Title" class="form-label">عنوان الإنجاز</label>
                <input asp-for="Title" class="form-control" placeholder="اكتب عنوان الإنجاز..." required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            
            <div class="mb-4">
                <label asp-for="Description" class="form-label">وصف الإنجاز</label>
                <textarea asp-for="Description" class="form-control" rows="6" 
                          placeholder="اكتب وصفاً مفصلاً لإنجازك..." required></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="mb-4">
                <label asp-for="Date" class="form-label">تاريخ الإنجاز</label>
                <input asp-for="Date" type="date" class="form-control" required />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            
            <!-- Photo Upload Section -->
            <div class="mb-4">
                <label class="form-label">صور الإنجاز (اختياري)</label>
                <div class="photo-upload-container">
                    <div class="photo-upload-area" id="photoUploadArea">
                        <div class="upload-placeholder">
                            <i class="bi bi-camera"></i>
                            <p>اضغط هنا لاختيار الصور</p>
                            <small class="text-muted">يمكنك رفع حتى 4 صور، كل صورة بحد أقصى 2 ميجابايت</small>
                        </div>
                        <input type="file" id="photoInput" name="photos" multiple accept="image/*" class="photo-input" />
                    </div>
                    <div class="photo-preview-container" id="photoPreviewContainer"></div>
                </div>
            </div>
            
            <div class="d-flex gap-3">
                <button type="submit" class="btn btn-primary flex-grow-1">
                    <i class="bi bi-check-circle me-2"></i>حفظ الإنجاز
                </button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="bi bi-x-circle me-2"></i>إلغاء
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/forms.js"></script>
    <script src="~/js/photo-upload.js"></script>
} 