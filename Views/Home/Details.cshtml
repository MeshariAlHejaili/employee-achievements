@model EmployeeAchievementss.Models.Achievement
@{
    ViewData["Title"] = "تفاصيل الإنجاز";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="bi bi-award"></i> تفاصيل الإنجاز</h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title mb-3">@Model.Title</h5>
                    <h6 class="card-subtitle mb-2 text-muted">تاريخ الإنجاز: @Model.Date.ToString("yyyy-MM-dd")</h6>
                    <p class="mb-4">@Model.Description</p>
                    <div class="d-flex align-items-center">
                        <i class="bi bi-person-circle fs-3 me-2 text-success"></i>
                        <span class="fw-bold">@Model.Owner?.Name</span>
                    </div>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-right"></i> عودة</a>
                </div>
            </div>
        </div>
    </div>
</div> 