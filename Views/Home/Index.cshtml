@using EmployeeAchievementss.Models
@{
    ViewData["Title"] = "الإنجازات";
    // Simulate logged-in user for now
    var currentUser = new User { Id = 1, Name = "مشاري الحربي" };
    // Simulate achievements list
    var achievements = new List<Achievement> {
        new Achievement {
            Id = 1,
            Title = "مشروع نيوسواك",
            Description = "إعادة تصميم كاملة لتدفق تأهيل المستخدمين لمشروع نيوسواك...",
            Date = new DateTime(2024, 6, 25),
            Owner = new User { Id = 1, Name = "مشاري الحربي" }
        },
        new Achievement {
            Id = 2,
            Title = "تطوير نظام التقارير",
            Description = "تطوير نظام تقارير جديد للإدارة...",
            Date = new DateTime(2024, 6, 20),
            Owner = new User { Id = 2, Name = "سارة أحمد" }
        }
    };
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
<style>
    body {
        background-color: #fff;
        color: #111;
    }
    .card {
        border: 1px solid #43a047;
        transition: transform 0.2s, box-shadow 0.2s;
        background-color: #fff;
        color: #111;
    }
    .card:hover {
        transform: translateY(-8px) scale(1.03);
        box-shadow: 0 8px 24px rgba(67, 160, 71, 0.2);
        border-color: #388e3c;
        cursor: pointer;
    }
    .card .badge {
        background-color: #43a047 !important;
    }
    .btn-outline-secondary {
        color: #388e3c;
        border-color: #388e3c;
    }
    .btn-outline-secondary:hover {
        background-color: #388e3c;
        color: #fff;
    }
    .card-footer {
        background-color: #c8e6c9;
    }
    h2, .card-title, .card-subtitle {
        color: #2e7d32;
    }
</style>

<div class="container py-4">
    <h2 class="mb-4">الإنجازات</h2>

    <!-- Add Achievement Button -->
    <div class="mb-4 text-end">
        <a class="btn btn-success" asp-action="AddAchievement"><i class="bi bi-plus-circle"></i> إضافة إنجاز</a>
    </div>

    <!-- Search Bar -->
    <div class="input-group mb-4">
        <input type="text" class="form-control" placeholder="ابحث في الإنجازات..." />
        <button class="btn btn-outline-secondary" type="button">بحث</button>
    </div>

    <!-- Card Grid -->
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var ach in achievements) {
            <div class="col">
                <a asp-action="Details" asp-route-id="@ach.Id" class="text-decoration-none text-reset">
                <div class="card h-100 shadow-sm position-relative">
                    <div class="card-body">
                        <span class="badge bg-secondary mb-2">@ach.Title</span>
                        <h5 class="card-title">@ach.Owner.Name</h5>
                        <h6 class="card-subtitle text-muted mb-2">قسم افتراضي</h6>
                        <h6 class="mt-3"><i class="bi bi-journal-text"></i> الإنجاز</h6>
                        <p>@ach.Description</p>
                    </div>
                    <div class="card-footer text-muted d-flex justify-content-between align-items-center">
                        <span>@ach.Date.ToString("MMMM dd, yyyy")</span>
                        <span>
                            @if (ach.Owner.Id == currentUser.Id) {
                                <button class="btn btn-sm btn-outline-primary me-1 edit-btn" title="تعديل"><i class="bi bi-pencil"></i></button>
                                <button class="btn btn-sm btn-outline-danger delete-btn" title="حذف"><i class="bi bi-trash"></i></button>
                            }
                        </span>
                    </div>
                </div>
                </a>
            </div>
        }
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Card highlight
        document.querySelectorAll('.card').forEach(function (card) {
            card.addEventListener('click', function () {
                card.classList.toggle('border-success');
                card.classList.toggle('shadow-lg');
            });
        });
        // Add/Edit/Delete button handlers (to be implemented)
        document.querySelectorAll('.edit-btn').forEach(function(btn) {
            btn.addEventListener('click', function(e) {
                e.stopPropagation();
                alert('تعديل الإنجاز (قريباً)');
            });
        });
        document.querySelectorAll('.delete-btn').forEach(function(btn) {
            btn.addEventListener('click', function(e) {
                e.stopPropagation();
                if (confirm('هل أنت متأكد من حذف هذا الإنجاز؟')) {
                    alert('تم حذف الإنجاز (قريباً)');
                }
            });
        });
    });
</script>
